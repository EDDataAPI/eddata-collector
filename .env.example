# EDData Collector Configuration - Development Environment
# Copy this file to .env and adjust the values as needed

# Node.js Environment
NODE_ENV=development

# Server Configuration
EDDATA_COLLECTOR_LOCAL_PORT=3002
EDDATA_DOMAIN=localhost

# EDDN Server (Elite Dangerous Data Network)
EDDN_SERVER=tcp://eddn.edcd.io:9500

# Directories (will be created automatically)
EDDATA_DATA_DIR=./eddata-data
EDDATA_CACHE_DIR=./eddata-data/cache
EDDATA_BACKUP_DIR=./eddata-backup
EDDATA_DOWNLOADS_DIR=./eddata-downloads

# Downloads Base URL (optional)
# EDDATA_DOWNLOADS_BASE_URL=https://downloads.eddata.api.com

# Database files
EDDATA_SYSTEMS_DB=./eddata-data/systems.db
EDDATA_LOCATIONS_DB=./eddata-data/locations.db
EDDATA_STATIONS_DB=./eddata-data/stations.db
EDDATA_TRADE_DB=./eddata-data/trade.db

# Maintenance window (UTC)
MAINTENANCE_DAY_OF_WEEK=4
MAINTENANCE_WINDOW_START_HOUR=7
MAINTENANCE_WINDOW_END_HOUR=9

# Data Retention (defined in code, documented here for reference)
# TRADE_DATA_MAX_AGE_DAYS=30 (commodity prices older than 30 days are deleted)
# RESCUE_SHIP_MAX_AGE_DAYS=7
# FLEET_CARRIER_MAX_AGE_DAYS=90

# Performance: Startup Optimization
# Skip all startup maintenance tasks for faster restarts (default: false)
# Only enable if cache files exist and are managed via cron
SKIP_STARTUP_MAINTENANCE=false

# Performance: Regional Commodity Reports
# Skip slow regional commodity reports (Core Systems, Colonia) (default: true)
# These take 5-10 minutes to generate and are rarely used
SKIP_REGIONAL_COMMODITY_REPORTS=true

# Performance: Index Creation
# Skip expensive index creation on startup (default: false)
# Useful for faster first-time startup - indexes can be created later
SKIP_EXPENSIVE_INDEXES=false

# Performance: Database Integrity Checks
# Skip database integrity checks on startup (default: true for production)
# Only needed after crashes or corruption - saves 5-10 minutes for large DBs
SKIP_INTEGRITY_CHECKS=false

# Logging
LOG_LEVEL=info

# Performance (Optional)
# NODE_OPTIONS=--max-old-space-size=4096
# UV_THREADPOOL_SIZE=8