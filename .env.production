# EDData Collector - Production Environment

# Node.js Environment
NODE_ENV=production

# Server Configuration  
EDDATA_COLLECTOR_LOCAL_PORT=3002
EDDATA_DOMAIN=collector.eddata.dev

# EDDN Server
EDDN_SERVER=tcp://eddn.edcd.io:9500

# Downloads
EDDATA_DOWNLOADS_BASE_URL=https://downloads.eddata.api.com

# Directories (container paths)
EDDATA_DATA_DIR=/app/eddata-data
EDDATA_CACHE_DIR=/app/eddata-data/cache
EDDATA_BACKUP_DIR=/app/eddata-backup
EDDATA_DOWNLOADS_DIR=/app/eddata-downloads

# Maintenance window (UTC) - Thursday 7-9 AM corresponding to Elite Dangerous
MAINTENANCE_DAY_OF_WEEK=4
MAINTENANCE_WINDOW_START_HOUR=7
MAINTENANCE_WINDOW_END_HOUR=9

# Logging
LOG_LEVEL=info

# Performance optimizations
NODE_OPTIONS=--max-old-space-size=4096
UV_THREADPOOL_SIZE=16