# EDData Collector - Staging Environment

# Node.js Environment
NODE_ENV=staging

# Server Configuration
EDDATA_COLLECTOR_LOCAL_PORT=3002
EDDATA_DOMAIN=staging-eddata.api.com

# EDDN Server
EDDN_SERVER=tcp://eddn.edcd.io:9500

# Downloads
EDDATA_DOWNLOADS_BASE_URL=https://staging-downloads.eddata.api.com

# Directories (container paths)
EDDATA_DATA_DIR=/app/eddata-data
EDDATA_CACHE_DIR=/app/eddata-data/cache
EDDATA_BACKUP_DIR=/app/eddata-backup  
EDDATA_DOWNLOADS_DIR=/app/eddata-downloads

# Maintenance window (UTC) - Saturday 1-3 AM for staging
MAINTENANCE_DAY_OF_WEEK=6
MAINTENANCE_WINDOW_START_HOUR=1
MAINTENANCE_WINDOW_END_HOUR=3

# Debugging
LOG_LEVEL=debug

# Performance (reduced for staging)
NODE_OPTIONS=--max-old-space-size=2048
UV_THREADPOOL_SIZE=8